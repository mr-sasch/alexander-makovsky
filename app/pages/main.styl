/*! Главная */
/*  Общие */
body,
html
  overflow hidden
  margin 0
  padding 0
/*  /Общие */

/*  Шапка */
header
  position fixed
  width 100%
  height 95px
  top 0
  z-index 10
  display -webkit-flex
  display -ms-flex
  display flex
  align-items center
  justify-content center

/*    Буллеты */
.bullets
  display flex
  justify-content center
  width 100%
.bullets__bullet
  position relative
  width 14px
  height 14px
  margin 0 12px

.bullets__bullet:after
  content ''
  position absolute
  width 100%
  height 100%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  border-radius 50%
  background-color rgba(36, 45, 46, .1)
  cursor pointer
  transition width .2s ease, height .2s ease, background-color .1s ease, transform .2s ease

.bullets__bullet:hover:after
  background-color rgba(36, 45, 46, 0.15)


.bullets__bullet.active:after
  content ''
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 130%
  height 130%
  border-radius 50%
  background-color #888888
  cursor default
/*    /Буллеты */

/*    Меню */
.menu
  position absolute
  right 0
  top 50%
  transform translateY(-50%)
/*    /Меню */

/*  /Шапка */

/*  Фрейм */
