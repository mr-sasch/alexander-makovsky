/*! Главная */
/*  Общие */
body,
html
  overflow hidden
  margin 0
  padding 0
/*  /Общие */

/*  Шапка */
header
  position fixed
  width 100%
  height 95px
  top 0
  z-index 10
  display -webkit-flex
  display -ms-flex
  display flex
  align-items center
  justify-content center

/*    Буллеты */
.bullets-wrapper
  display -webkit-flex
  display -ms-flex
  display flex
  flex-grow 1px
.bullets
  display flex
.bullets__bullet
  width 14px
  height 14px
  margin 0 12px
  background-color rgba(36, 45, 46, .1)
  border-radius 50%
  cursor pointer

.bullets__bullet.active
  width 20px
  height 20px
  margin-top -3.5px
  left -3px
  background-color #888888
/*    /Буллеты */

/*    Меню */
.menu
  flex-grow 0
/*    /Меню */

/*  /Шапка */

/*  Фрейм */
.cart-item
  box-shadow 0 5px 35px 0 rgba(0,0,0,.2)
  height 81vh
  min-height 516px
  overflow hidden
  margin 95px auto
  background #fff
/*  /Фрейм */
/*! /Главная */
