/*! Header Главная */
.header__main
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content space-between
  align-items center
  padding 10px

.header__main-bullets
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content space-between
  align-items center

.header__main-bullets-li
  height 20px
  width 20px
  border-radius 50%
  background-color rgb(214, 214, 214)
  margin 0 10px
  cursor pointer

.header__main-bullets-li.active
  height 30px
  width 30px
  background-color #ffd56a

.header__main-nav-mobile
  text-align right
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column
  align-items flex-end
  justify-content center
  width 40px

.header__main-nav-mobile-li
  height 3px
  background-color #333333
  transition .6s ease

.header__main-nav-mobile-li-1
  width 25px
.header__main-nav-mobile-li-2
  width 35px
  margin 8px 0
.header__main-nav-mobile-li-3
  width 15px

.header__main-nav-mobile:hover
  .header__main-nav-mobile-li
    width 40px

/*! /Header Главная */
